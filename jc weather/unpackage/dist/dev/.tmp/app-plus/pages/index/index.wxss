page {
	/* display: flex;
	flex-direction: column;
	justify-content: flex-start;
	background: linear-gradient(#4990e2, #87c1f1); */
	width: 100%;
	height: 100%;
	background-color: #f6f6f6;
	overflow: hidden;
}
.container {
	width: 100%;
	height: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.top {
	-webkit-box-flex: 0;
	-webkit-flex: 0 0 60%;
	        flex: 0 0 60%;
	width: 100%;
	background: -webkit-linear-gradient(#4990e2, #87c1f1);
	background: linear-gradient(#4990e2, #87c1f1);
}
#list {
	-webkit-box-flex:1;
	-webkit-flex-grow:1;
	        flex-grow:1;
	width: 100%;
}
.list_item {
	background-color: #FFFFFF;
	height: 110rpx;
	line-height: 110rpx;
	padding: 0rpx 30rpx;
	font-size: 28rpx;
}
.list-item-alter {
	background-color: #F6F9FE;
}
.right{
	float: right;
}
::-webkit-scrollbar {
	width: 0;
	height: 0;
	background-color: transparent;
}
.city {
	font-size: 60rpx;
	color: #fff;
	font-weight: 200;
}
.weizhi{
	width: 40rpx;
	height: 40rpx;
	vertical-align: middle;
	padding: 0rpx 20rpx 0 40rpx;
}

/* 污染指数 */
.pm{
	float: right;
	font-size: 30rpx;
	padding-right: 60rpx;
	padding-top: 20rpx;
	color: #FFFFFF;
}
.subtitle {
	text-align: center;
	font-size: 20rpx;
	color: #fff;
	padding-top: 20rpx;
	font-weight: 200;
}
.temperature {
	z-index: 99;
}
.user {
	padding: 0rpx 20px 10px 20px;
}

/* 用户昵称 */
.open-data-userNickName{
	font-size: 30rpx;
	padding: 0rpx 0rpx 0rpx 30rpx;
	color: #ffffff;
	display: inline-block;
}

/* 用户头像 */
.userIcon,.open-data-userAvatarUrl {
	border-radius: 50%;
	overflow: hidden;
	width: 50rpx;
	height: 50rpx;
	box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.5);
	vertical-align:middle;
	display: inline-block;
}

/* 当前位置 */
.location{
	font-size: 30rpx;
	padding: 0rpx 0rpx 0rpx 50rpx;
	color: #ffffff;
	font-weight: 200;
}

/* 当前温度 */
.winter{
	font-size: 180rpx;
	text-align: center;
	color:#FFFFFF;
	font-weight: 300;
	position: relative;
}
.du{
	font-size: 40rpx;
	position: absolute;
	top: 40rpx;
	font-weight: 300;
}
.weather{
	position: relative;
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.weather2{
	width: 160rpx;
	display: block;
	text-align: center;
	background: rgba(66,132,208,0.5);
	font-size: 30rpx;
	color: #FFFFFF;
	border-radius: 14rpx;
	padding: 5rpx 0 5rpx 0;
}
.tip{
	font-size: 30rpx;
	color: #FFFFFF;
	padding: 20rpx 20px;
	text-indent: 2rem;
}

